<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation = "vertical"
    tools:context=".personal">

    <ImageButton
        android:id="@+id/back_personal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/vector_drawable_back"/>
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/personal_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/vector_drawable_head2"/>
        <TextView
            android:id="@+id/name_personal"
            android:layout_width="300dp"
            android:text="昵称："
            android:textSize="20dp"
            android:layout_height="30dp"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/phome_personal"
        android:layout_width="300dp"
        android:text="手机号：xxxxxxx"
        android:textSize="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>
    <Button
        android:id="@+id/out"
        android:layout_height="50dp"
        android:layout_width="320dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#fdfdfd"
        android:backgroundTint="@drawable/personal_out"
        android:text="登出"
        />





</LinearLayout>